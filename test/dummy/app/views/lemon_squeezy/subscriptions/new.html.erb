<div class="row">
  <div class="col-sm-6">
    <%= form_with url: lemon_squeezy_subscriptions_path,
      method: :post, data: { controller: "lemon-squeezy" } do |form| %>

      <div class="form-group">
        <%= form.label :plan_id, "Plan ID" %>
        <%= form.text_field :plan_id, value: "default", class: "form-control" %>
      </div>

      <div class="my-8 text-center">
        <%= form.button "Checkout", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>


  <div class="col-sm-6">
    <h6>Test cards</h6>
    <div>
      <code class="mr-3">4111111111111111</code>
      Visa
    </div>

    <%= link_to "All Test Cards", "https://developers.braintreepayments.com/reference/general/testing/ruby", target: :_blank, class: "btn btn-outline-dark btn-sm mt-3" %>
  </div>
</div>
